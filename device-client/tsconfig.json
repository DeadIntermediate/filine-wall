{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": ["server/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": ["./**/*", "../server/**/*", "../db/**/*"],
  "exclude": ["node_modules", "dist"]
}