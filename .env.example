# Environment Configuration for FiLine Wall
# Copy this file to .env and configure with your values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database Configuration
# The installer automatically creates a dedicated database user and secure password
DATABASE_URL=postgresql://filinewall:auto_generated_password@localhost:5432/filine_wall

# Security - IMPORTANT: Auto-generated during installation
JWT_SECRET=auto-generated-secure-random-string
ENCRYPTION_KEY=auto-generated-32-character-string
SESSION_SECRET=auto-generated-session-secret

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# External API Keys (Optional)
# Spam Database Services
NUMVERIFY_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
NOMOROBO_API_KEY=

# Phone Verification Services
PHONENUMBERVALIDATOR_API_KEY=
NUMLOOKUP_API_KEY=

# Do Not Call Registry
DNC_API_KEY=
DNC_API_URL=https://telemarketing.donotcall.gov/api

# FCC Spam Database
FCC_API_KEY=

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/filine.log

# AI/ML Configuration
ML_MODEL_PATH=./models/spam-detection
ML_TRAINING_ENABLED=true
ML_MIN_TRAINING_SAMPLES=100

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Device Configuration
MODEM_PORT=/dev/ttyUSB0
MODEM_BAUDRATE=115200
DEVICE_ENCRYPTION_ENABLED=true

# Honeypot System
HONEYPOT_ENABLED=false
HONEYPOT_NUMBERS=

# Collaborative Threat Intelligence
THREAT_INTEL_ENABLED=true
THREAT_INTEL_SHARE_DATA=false

# Performance
CACHE_TTL_SECONDS=3600
MAX_CALL_LOGS_AGE_DAYS=90

# Feature Flags
FEATURE_VOICE_ANALYSIS=true
FEATURE_ADVANCED_NLP=true
FEATURE_FEDERATED_LEARNING=false
FEATURE_IVR_SCREENING=true
FEATURE_CALLER_VERIFICATION=true
